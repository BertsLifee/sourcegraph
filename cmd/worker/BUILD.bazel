load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_cross_binary", "go_library")
load("@rules_oci//oci:defs.bzl", "oci_image", "oci_tarball")
load("@rules_pkg//:pkg.bzl", "pkg_tar")

go_library(
    name = "worker_lib",
    srcs = ["main.go"],
    importpath = "github.com/sourcegraph/sourcegraph/cmd/worker",
    visibility = ["//visibility:private"],
    deps = [
        "//cmd/sourcegraph-oss/osscmd",
        "//cmd/worker/shared",
    ],
)

go_binary(
    name = "worker",
    embed = [":worker_lib"],
    visibility = ["//visibility:public"],
    x_defs = {
        "github.com/sourcegraph/sourcegraph/internal/version.version": "{STABLE_VERSION}",
        "github.com/sourcegraph/sourcegraph/internal/version.timestamp": "{VERSION_TIMESTAMP}",
    },
)

go_cross_binary(
    name = "worker_linux_amd64",
    platform = "@io_bazel_rules_go//go/toolchain:linux_amd64",
    target = ":worker",
)

pkg_tar(
    name = "tar_worker_linux_amd64",
    srcs = [":worker_linux_amd64"],
    remap_paths = {"/worker_linux_amd64": "/worker"},
)

oci_image(
    name = "image",
    architecture = "amd64",
    base = "@wolfi_base",
    entrypoint = ["/worker"],
    os = "linux",
    tars = [":tar_worker_linux_amd64"],
)

oci_tarball(
    name = "image_tarball",
    image = ":image",
    repotags = ["worker:candidate"],
)
